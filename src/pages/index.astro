---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";
import Card from "../components/Card.astro";
import PaymentMethods from "../components/PaymentMethods.astro";
import FAQ from "../components/FAQ.astro";
import { PRICES } from "../constants";

const courses = [
	{
		title: "Formación en Terapia Asistida",
		description:
			"Cursada anual, modalidad online con prácticas presenciales. Programa integral de 10 meses y 220 horas académicas.",
		price: PRICES.therapy,
		duration: "10 Meses",
		level: "Profesional",
		tags: ["Terapia", "Psicodélicos", "Salud Mental"],
	},
	{
		title: "Reglas Claras",
		description:
			"Marco legal y regulatorio de los psicodélicos, prevención y derechos. Modalidad online asincrónica.",
		price: PRICES.legal,
		duration: "4 Semanas",
		level: "General",
		tags: ["Legales", "Derechos", "Prevención"],
	},
	{
		title: "Workshop: Hongos Adaptógenos",
		description:
			"Propiedades medicinales, extractos y técnicas de autocultivo. Aprende desde casa a tu propio ritmo.",
		price: PRICES.workshop,
		duration: "Intensivo",
		level: "Inicial",
		tags: ["Cultivo", "Medicina Natural", "Hongos"],
	},
];
---

<Layout>
	<main class="space-y-0">
		<Hero />

		<section id="cursos" class="py-20 bg-slate-50">
			<div class="container mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-4">
						Nuestras Formaciones
					</h2>
					<p class="text-xl text-slate-600 max-w-2xl mx-auto">
						Educación profesional y responsable sobre el uso terapéutico de
						psicodélicos.
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{courses.map((course) => <Card {...course} />)}
				</div>
			</div>
		</section>

		<PaymentMethods />

		<FAQ />

		<footer class="bg-slate-900 text-slate-400 py-12 border-t border-slate-800">
			<div class="container mx-auto px-6 text-center">
				<p class="mb-4">
					&copy; {new Date().getFullYear()} Psicode Bolivia. Todos los derechos reservados.
				</p>
				<p class="text-sm">Hecho con ❤️ en Santa Cruz de la Sierra.</p>
			</div>
		</footer>
	</main>
</Layout>
